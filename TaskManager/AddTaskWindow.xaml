<Window x:Class="TaskManager.AddTaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskManager"
        mc:Ignorable="d"
        Title="Add Task" Height="350" Width="400">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Add New Task" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20" Grid.Row="0"/>

        <StackPanel Grid.Row="1" Margin="0,0,0,10">
            <TextBlock Text="Task Name" Margin="0,0,0,5"/>
            <TextBox x:Name="TaskName" Width="200"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Margin="0,0,0,20">
            <TextBlock Text="Priority" Margin="0,0,0,5"/>
            <ComboBox x:Name="PriorityComboBox" Width="200"/>
        </StackPanel>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Save" Width="80" Click="Button_Click" Margin="0,0,10,0"/>
            <Button Content="Cancel" Width="80" Click="Button_Click_1"/>
        </StackPanel>
    </Grid>
</Window>
