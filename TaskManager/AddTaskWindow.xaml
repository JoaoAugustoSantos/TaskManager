<Window x:Class="TaskManager.AddTaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskManager"
        mc:Ignorable="d"
        Title="AddTaskWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="TaskName" HorizontalAlignment="Center" Margin="0,141,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Button Content="Save" HorizontalAlignment="Center" Margin="0,266,0,0" VerticalAlignment="Top" Click="Button_Click"/>
        <Button Content="Cancel" HorizontalAlignment="Center" Margin="0,303,0,0" VerticalAlignment="Top"/>
        <Label Content="Task Name" HorizontalAlignment="Center" Margin="0,115,0,0" VerticalAlignment="Top"/>
        <Label Content="Priority" HorizontalAlignment="Center" Margin="0,185,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="PriorityComboBox" HorizontalAlignment="Center" Margin="0,216,0,0" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
