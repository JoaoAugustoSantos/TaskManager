<Window x:Class="TaskManager.AddTaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Task" Height="400" Width="450" Background="#F3F4F6"
        WindowStartupLocation="CenterOwner">
    
    <Grid Margin="20">
        <Border Background="White" CornerRadius="10" Padding="20">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="320">
                <TextBlock Text="Add New Task" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,30"/>

                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="Task Name" FontSize="14" Margin="0,0,0,5"/>
                    <TextBox x:Name="TaskName" Width="320" Height="35" Padding="5" FontSize="16"/>
                </StackPanel>

                <StackPanel Margin="0,0,0,30">
                    <TextBlock Text="Priority" FontSize="14" Margin="0,0,0,5"/>
                    <ComboBox x:Name="PriorityComboBox" Width="320" Height="35" FontSize="16"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="Save" Width="120" Height="40" Background="#4CAF50" Foreground="White" FontWeight="SemiBold"
                            Click="Button_Click" Cursor="Hand" Margin="0,0,10,0">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#4CAF50"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#81C784"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button Content="Cancel" Width="120" Height="40" Background="#E53935" Foreground="White" FontWeight="SemiBold"
                            Click="Button_Click_1" Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#E53935"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#D32F2F"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
