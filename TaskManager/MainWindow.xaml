<Window x:Class="TaskManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskManager"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid x:Name="Main_Window">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBox HorizontalAlignment="Center" Margin="0,54,0,0" TextWrapping="Wrap" Text="TASK MANAGER" VerticalAlignment="Top" Width="120"/>
        <Button Content="Add Task" Margin="35,105,0,0" VerticalAlignment="Top" Click="Button_Click" HorizontalAlignment="Left"/>
        <Button Content="BUTTON A" Margin="35,186,0,0" VerticalAlignment="Top" Click="Button_Click" HorizontalAlignment="Left"/>
        <Button Content="BUTTON B" Margin="35,274,0,0" VerticalAlignment="Top" Click="Button_Click" HorizontalAlignment="Left"/>
        <ListBox x:Name="TaskListBox" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="265,98,61,84"/>

    </Grid>
</Window>
